import math

# Task 1: Display square root of a number
number = float(input("Enter a number to find its square root: "))
if number < 0:
    print("Square root is not defined for negative numbers.")
else:
    sqrt = math.sqrt(number)
    print(f"The square root of {number} is {sqrt}")

# Task 2: Check if a number is even or odd
num = int(input("\nEnter an integer to check if it's even or odd: "))
if num % 2 == 0:
    print(f"{num} is Even")
else:
    print(f"{num} is Odd")

# Task 3: Ask user to enter the name and then greet
name = input("\nEnter your name: ")
print(f"Hello, {name}! Nice to meet you.")
